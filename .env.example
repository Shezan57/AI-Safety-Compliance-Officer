# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Key (Required for AI report generation)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (Optional for monitoring AI performance)
LANGSMITH_TRACING_V2=true
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=ai-safety-compliance-officer
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Email Configuration (Required for notifications)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENTS=manager1@company.com,manager2@company.com

# Optional: Site Configuration
SITE_NAME="Construction Site A"
COMPANY_NAME="Your Construction Company"
